<!DOCTYPE html>
<html>
<head>
  <title>Vintax | Guilds</title>
  <link href="https://fonts.googleapis.com/css2?family=Orbitron&display=swap" rel="stylesheet">
  <style>
    body {
      background: #0d0d0d;
      color: #00ffe1;
      font-family: 'Orbitron', sans-serif;
      padding: 20px;
    }
    h1 {
      text-align: center;
      margin-bottom: 30px;
      text-shadow: 0 0 10px #00ffe1;
    }
    .guilds {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 20px;
    }
    .card {
      background: rgba(0, 255, 225, 0.08);
      border: 1px solid #00ffe1;
      border-radius: 12px;
      padding: 15px;
      text-align: center;
      box-shadow: 0 0 10px #00ffe1;
    }
    .icon {
      width: 64px;
      height: 64px;
      border-radius: 50%;
      margin-bottom: 10px;
      box-shadow: 0 0 8px #00ffe1;
    }
  </style>
</head>
<body>
  <h1>Guilds</h1>
  <div class="guilds">
    <% guilds.forEach(guild => { %>
      <div class="card">
        <% if (guild.iconURL) { %>
          <img class="icon" src="<%= guild.iconURL %>" alt="icon">
        <% } else { %>
          <div class="icon" style="background: #111; line-height: 64px;">N/A</div>
        <% } %>
        <h3><%= guild.name %></h3>
        <p>ID: <%= guild.id %></p>
        <p>Members: <%= guild.memberCount %></p>
      </div>
    <% }) %>
  </div>
</body>
</html>